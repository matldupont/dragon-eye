---
import { Image } from 'astro:assets';
const { image, title, description, link } = Astro.props;
---

<div class="flex flex-col md:flex-row gap-y-8 gap-x-8 shadow-gray-500 shadow-md bg-white rounded-xs p-8">
  <div class="flex flex-col gap-y-4">
    <div class="h-24 w-24 md:h-32 lg:h-48 md:w-32 lg:w-48 bg-white rounded-xs shadow-gray-500 shadow-md p-4">
      <Image src={image} alt="The Ottawa School File" class="w-full h-full " />
    </div>
  </div>

  <div class="flex flex-col gap-y-4">
    <div class="font-bold text-2xl font-mono uppercase">{title}</div>
    <p>{description}</p>
    <div class="flex-1 flex flex-col justify-end">

      <a href={link} class="text-blue-900 font-mono">Read More</a>
    </div>
  </div>
</div>