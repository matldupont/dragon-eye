---
import { Image } from "astro:assets";
const {
  image,
  imageAlt,
  title,
  description,
  caseNumber,
  alias,
  address,
  name,
  knownAssociates,
} = Astro.props;
---

<div
  class="flex flex-col gap-y-4 shadow-gray-500 shadow-md bg-white rounded-xs p-8 text-gray-700"
>
  <div class="flex flex-col md:flex-row gap-x-8">
    <div class="flex justify-center items-center gap-y-4">
      <div
        class="h-56 w-56 md:h-48 md:w-48 bg-white rounded-xs shadow-gray-500 shadow-md p-4"
      >
        <Image src={image} alt={imageAlt} class="w-full h-full" />
      </div>
    </div>

    <div class="flex flex-col gap-y-4 flex-1 mt-8">
      <h1 class="self-center font-bold text-2xl font-mono uppercase">
        {title}
      </h1>
      <dl
        class="grid grid-cols-[1fr_2fr] gap-x-2 gap-y-4 items-center justify-end flex-1"
      >
        <dt class="flex font-bold text-lg justify-end text-right">Name:</dt>
        <dd class="border-b px-4 border-gray-500 font-mono text-gray-600">
          {name}
        </dd>

        <dt class="flex font-bold text-lg justify-end text-right">
          Case Number:
        </dt>
        <dd class="border-b px-4 border-gray-500 font-mono text-gray-600">
          {caseNumber}
        </dd>

        <dt class="flex font-bold text-lg justify-end">Alias:</dt>
        <dd class="border-b px-4 border-gray-500 font-mono text-gray-600">
          {alias}
        </dd>

        <dt class="flex font-bold text-lg justify-end">Address:</dt>
        <dd class="border-b px-4 border-gray-500 font-mono text-gray-600">
          {address}
        </dd>
      </dl>
    </div>
  </div>
  <dl class="flex gap-x-4 mt-8">
    <dt class="flex font-bold text-lg">Known Associates:</dt>
    <dd class="flex-1 border-b px-4 border-gray-500 font-mono text-gray-600">
      {knownAssociates}
    </dd>
  </dl>
  <div class="flex-1 border-b py-2 border-gray-500 font-mono text-gray-600">
  </div>
  <dl class="mt-4">
    <dt class="flex font-bold text-lg">Description:</dt>
    <dd
      class="flex-1 underline underline-offset-6 text-base/8 font-mono text-gray-600 float-left clear-left"
    >
      {description}
    </dd>
  </dl>
</div>
